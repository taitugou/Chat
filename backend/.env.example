# 服务器配置
PORT=888
HOST=localhost
NODE_ENV=production
# 开启 HTTPS
SSL_ENABLED=true
# 填写 Linux 服务器上证书的绝对路径
SSL_KEY=/etc/ssl/taitugou.top/privkey.pem
SSL_CERT=/etc/ssl/taitugou.top/fullchain.pem

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=tai_chat

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REMEMBER_ME_EXPIRES_IN=30d

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_VIDEO_TYPES=mp4,webm

# 内网穿透配置 (可选)
FRP_ENABLED=false
FRP_DOMAIN=

# CORS配置 (如果是单端口模式，通常不需要配置，除非有外部调用)
CORS_ORIGIN=https://your-domain.com

# OAuth 配置
# 是否跳过 redirect_uri 白名单校验（不推荐生产）
OAUTH_ALLOW_ANY_REDIRECT_URI=false

# 是否允许 localhost/127.0.0.1/::1/内网 IP 回调地址（开发方便；如需严格白名单可关闭）
OAUTH_ALLOW_LOCAL_REDIRECT_URI=true
