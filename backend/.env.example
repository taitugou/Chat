# 服务器配置
PORT=888
HOST=localhost
NODE_ENV=production
# 开启 HTTPS
SSL_ENABLED=true
# 填写 Linux 服务器上证书的绝对路径
SSL_KEY=/path/to/your/certificate.key
SSL_CERT=/path/to/your/certificate.crt

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=tai_chat

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REMEMBER_ME_EXPIRES_IN=30d

# 文件上传配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
ALLOWED_VIDEO_TYPES=mp4,webm

# 内网穿透配置 (可选)
FRP_ENABLED=false
FRP_DOMAIN=

# CORS配置 (如果是单端口模式，通常不需要配置，除非有外部调用)
CORS_ORIGIN=https://your-domain.com
